#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    combos {
        compatible = "zmk,combos";

        quote {
            bindings = <&kp DOUBLE_QUOTES>;
            key-positions = <9 10>;
        };

        Return {
            bindings = <&kp BACKSPACE>;
            key-positions = <21 20>;
        };

        backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <8 9>;
        };

        shiftR {
            bindings = <&kp LEFT_SHIFT>;
            key-positions = <39 40>;
        };

        tab {
            bindings = <&kp TAB>;
            key-positions = <2 1>;
        };

        shiftL {
            bindings = <&kp LEFT_SHIFT>;
            key-positions = <38 37>;
        };

        AS_Z {
            bindings = <&kp Z>;
            key-positions = <13 14>;
        };

        SD_X {
            bindings = <&kp X>;
            key-positions = <14 15>;
        };

        CV_Command {
            bindings = <&kp LEFT_COMMAND>;
            key-positions = <36 37>;
        };

        NM_Layershift {
            bindings = <&mo 1>;
            key-positions = <40 41>;
        };
    };

    behaviors {
        H_COMMA: H_COMMA {
            compatible = "zmk,behavior-hold-tap";
            label = "H_COMMA";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <250>;
            flavor = "tap-preferred";
            hold-trigger-key-positions = <18>;
        };

        J_PERIOD: J_PERIOD {
            compatible = "zmk,behavior-hold-tap";
            label = "J_PERIOD";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <250>;
            flavor = "tap-preferred";
            hold-trigger-key-positions = <19>;
        };

        K_QUESTION: K_QUESTION {
            compatible = "zmk,behavior-hold-tap";
            label = "K_QUESTION";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <250>;
            flavor = "tap-preferred";
            hold-trigger-key-positions = <20>;
        };

        L_EXCLAIM: L_EXCLAIM {
            compatible = "zmk,behavior-hold-tap";
            label = "L_EXCLAIM";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <250>;
